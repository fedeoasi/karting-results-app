-@ val title: String
-@ val body: String
- import org.pac4j.j2e.util.UserUtils
- import org.pac4j.core.context._
- import com.chicagof1.auth.AuthUtils
- session.setAttribute(HttpConstants.REQUESTED_URL, null)
- val user = UserUtils.getProfile(session)
!!!
html
  head
    title= title
    script(type='text/javascript' src='https://code.jquery.com/jquery-1.10.2.js')
    script(type='text/javascript' src='https://cdn.datatables.net/1.10.2/js/jquery.dataTables.js')
    script(type='text/javascript' src='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    script(type='text/javascript' src='https://cdn.datatables.net/tabletools/2.2.2/js/dataTables.tableTools.js')
    link(rel='stylesheet' href='/css/demo_table.css')
    link(rel='stylesheet' href='/css/all.css')
    link(rel='stylesheet' href='/css/flags.css')
    link(rel='stylesheet' href='https://netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' type='text/css')
    link(rel='stylesheet' href='https://cdn.datatables.net/1.10.2/css/jquery.dataTables.css')
    link(rel='stylesheet' href='https://cdn.datatables.net/tabletools/2.2.2/css/dataTables.tableTools.css')
    link(rel='stylesheet' href='http://fonts.googleapis.com/css?family=Open+Sans:100,200,300,400,600,700'  type='text/css')

  body
    #nav.navbar.navbar-inverse
      .container.fluid
        .collapse.navbar-collapse
          ul(id="menu" class="nav navbar-nav")
            li
              a(href="/") Home
            li
              a(href="/events") Events
            li
              a(href="/standings") Standings
            li
              a(href="/editions") Editions
            li
              a(href="/videos") Videos
          /.clear
          ul(id="menu" class="nav navbar-nav navbar-right")
            - if (user == null) {
              li
                a(href="/login") Login
            - } else {
              li
                a#dLabel(data-toggle="dropdown")= AuthUtils.fullName(user)
                ul.dropdown-menu
                  li
                    a(href="/user/profile") My Profile
                  li
                    a(href="/logout") Logout
            - }
    #mainContent.container-fluid.jumbo
      != body
