-@ val source: String

table(id='racerResultsTable' class='table table-hover table-striped')
  thead
    tr
      th Racer
      th Position
      th Kart #
      th Time
  tbody
  :!javascript
    $(document).ready(function() {
      $('#racerResultsTable').dataTable( {
    	"bProcessing": true,
        "sAjaxSource": '#{source}',
        "bPaginate": false,
        "bFilter": false,
        "aaSorting": [[ 1, "asc" ]],
        "bInfo": false,
        "aoColumnDefs": [
          { "sClass": "center", "aTargets": [1, 2, 3] },
          { "sClass": "racer", "aTargets": [0] }
        ]
      });
    });
